{
    "name": "xanpena/laravel-smvc",
    "description": "SMVC Pattern CRUD Generator Library",
    "keywords": [
        "smvc",
        "laravel",
        "schema",
        "generator",
        "crud"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Xan Pena",
            "email": "xanpena@outlook.es"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "illuminate/console": "~5.7.0|~5.8.0|^6.0",
        "illuminate/support": "~5.7.0|~5.8.0|^6.0",
        "illuminate/auth": "^6.0",
        "illuminate/bus": "^6.0",
        "illuminate/routing": "^6.0",
        "illuminate/translation": "^6.0",
        "illuminate/validation": "^6.0",
        "symfony/console": "^4.0|^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^7.5|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Xanpena\\SMVC\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xanpena\\SMVC\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xanpena\\SMVC\\SMVCServiceProvider"
            ],
            "aliases": {
                "SMVC": "Xanpena\\SMVC\\SMVCFacade"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
